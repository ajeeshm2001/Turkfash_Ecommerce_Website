<main id="main" class="main">
  <section>
    <div class="container">
      <table class="table table-striped" id="myTable">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Product Name</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Size</th>
            <th scope="col">Stock</th>
            <th scope="col">New Price</th>

            
            <th scope="col">Image</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            
            <th scope="row">{{inc @index}}</th>
            <td>{{this.Name}}</td>
            <td>{{this.Description}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Size}}</td>
            <td style="color: green;">{{this.stock}}</td>
            <td>{{this.NewPrice}}/-</td>
            <td><img src="/pictures/productimages/{{this.img.[3]}}" alt="" style="width:50px ;"></td>
            <td>
              <a href="/admin/editproduct/{{this._id}}" class="btn btn-primary">Edit</a>
              <button class="btn btn-danger" onclick='deleteProductss("{{this._id}}")'>Delete</button>
            </td>
           
          </tr>
           {{/each}}

        </tbody>
      </table>
    </div>
  </section>
</main>
<script>
  $(document).ready( function () {
    $('#myTable').DataTable();
} );

function deleteProductss(productId){
  swal({
  title: "Are you sure Want to Delete?",
  icon:"warning",
  buttons: true,
  dangerMode: true,
})
.then((willDelete) => {
  if (willDelete) {
    $.ajax({
    url:'/admin/deleteproduct/'+productId,
    method:'delete',
    success:(response)=>{
      location.reload()
    }
  })
  }
});
  
}


</script>