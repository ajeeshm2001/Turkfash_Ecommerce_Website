<main id="main" class="main">
  <section>
    <div class="container">
<table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Image</th>
                   <th scope="col">Product Name</th>
                    <th scope="col">Current Product Offer</th>
                    <th scope="col">Add Offer</th>
                    <th scope="col">Delete Offer</th>
                  </tr>
                </thead>
                <tbody>
                    {{#each category}}
                  <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td><img src="/pictures/categoryimages/{{this.img}}" alt="" style="width: 50px;height: auto;"></td>
                    <td>{{this.Name}}</td>
                    <td  style="color: green;"><span id="{{this._id}}">{{this.categoryoffer}}</span> </td>
                    <td><button class="btn btn-primary" onclick="addOffer('{{this._id}}')">Add Offer</button></td>
                    <td><button class="btn btn-danger">Delete Offer</button></td>
                  </tr>
                  {{/each}}
                  
                </tbody>
              </table>
    </div>
  </section>
  <script>
    function addOffer(catId){
        swal("Enter Your Offer Percentage :", {
  content: "input",
})
.then((value) => {
  console.log(value)
  $.ajax({
    url:'/admin/addcategoryoffer',
    data:{
      catId:catId,
      catOffer:value
    },
    method:'put',
    success:(response)=>{
      document.getElementById(catId).innerHTML=value
    }
  })
});
    }
  </script>
</main>