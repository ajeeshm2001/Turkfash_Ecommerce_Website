<div class="card">
            <div class="card-body">
              <h5 class="card-title">Return Items</h5>

              <!-- General Form Elements -->
              <form id="returnform">
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Reason For Return</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="reason">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputEmail" class="col-sm-2 col-form-label">Reason Details</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="reasondetails">
                  </div>
                </div>
               
                
                
                

                
                <div class="row mb-3">
                  <label for="inputPassword" class="col-sm-2 col-form-label">Comments</label>
                  <div class="col-sm-10">
                    <textarea class="form-control" style="height: 100px" name="comments"></textarea>
                  </div>
                </div>

                
                
                

                

                <input type="text" name="id" value="{{order}}">

                

                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Submit Button</label>
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Submit Form</button>
                  </div>
                </div>

                

              </form><!-- End General Form Elements -->

            </div>
          </div>
<script>
    $('#returnform').submit((e)=>{
        e.preventDefault()

        $.ajax({
            url:'/'
        })
    })
</script>

    