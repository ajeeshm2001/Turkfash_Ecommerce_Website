<style>
    body{
        padding: 0%;
    }
</style>
<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Enter Your 4 Digit Otp</p>

                <form class="mx-1 mx-md-4" action="/verify" method="post">

                 

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example3c">Your 4 Digit Code</label>
                      <input type="number" id="form3Example3c" class="form-control " name="code" />
                      <div class="text-center">
                           <p style="color: red;" id="timer" class="font-weight-bold"></p>
                      <a href="/otplogin" style="color: red;" id="link" class=" font-weight-bold"></a>
                      </div>
                     
                      {{#if otpver}}
                      <p style="color: red;">{{otpver}}</p>
                      {{/if}}
                    </div>
                  </div>

                 
                

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Verify</button>
                    
                  </div>
               
                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
        const nf = (n, c) => n.toString().padStart(c, '0');

       var counter = 0
       var timeleft =120
        const timer =document.getElementById("timer")
        const link =document.getElementById("link")
        timer.innerHTML=(convertSeconds(timeleft-counter))

        function convertSeconds(s){
            var min = Math.floor(s/60)
            var sec = s%60
            return nf(min,2)+':'+ nf(sec,2)
        }
        function timeIt(){
            counter++
            timer.innerHTML=(convertSeconds(timeleft-counter))
            if(counter==timeleft){
                clearInterval(interval)
                counter=0;
                timer.innerHTML=""
                link.innerHTML=" Resend "

            }
        }
       var interval = setInterval(timeIt,1000)
    </script>
